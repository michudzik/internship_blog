.container
  .sessions.row
    .col-md-6.offset-md-3
      %h2.sessions-header Log in
      .sessions-form
        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          = devise_error_messages!
          .sessions-field
            = f.label :email, class: 'sessions-label'
            = f.email_field :email, autofocus: true, autocomplete: 'email',
             placeholder: 'example@example.com', class: 'form-control'

          .sessions-field
            = f.label :password, class: 'sessions-label'
            = link_to 'Forgotten password?', new_password_path(resource_name), class: 'sessions-forgot'
            = f.password_field :password, autocomplete: 'off', placeholder: '*' * 8, class: 'form-control'

          - if devise_mapping.rememberable?
            .sessions-field
              = f.check_box :remember_me
              = f.label :remember_me

          .actions
            = f.submit 'Log in', class: 'btn btn-primary btn-block'

      .sessions-link
        - if devise_mapping.confirmable? && controller_name != 'confirmations'
          = link_to 'Didn\'t receive confirmation instructions?', new_confirmation_path(resource_name)

      .sessions-link
        - if devise_mapping.registerable? && controller_name != 'registrations'
          = link_to 'Sign up', new_registration_path(resource_name)
