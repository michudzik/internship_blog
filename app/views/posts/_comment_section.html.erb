<div class="container commentSection">
  <% unless comments.nil? %>
      <h3 class="commentSection-title">Comment section</h3>
      <div class="row commentSection-headings">
        <div class="col-md-2">Author</div>
        <div class="col-md-10">Comment</div>
    </div>
    <div class="commentSection-comments">
      <% comments.each do |comment| %>
        <%= render 'posts/comment', comment: comment %>
      <% end %>
    </div>
  <% end %>
</div>