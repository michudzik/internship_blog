<% if @post.errors.any? %>
  <div class="alert alert-danger">
    <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, class: 'form-control' %>
  <br/>

  <%= f.label :content %>
  <%= f.text_area :content, size: '24x5', class: 'form-control' %>
  <br/>

  <%= f.label :author_id %>
  <%= f.select :author_id do %>
    <% @authors.each do |author| %>
      <%= content_tag(:option, author.first, value: author.last) %>
    <% end %>
  <% end %>
  <br/>

  <%= f.submit locals[:button_text], class: 'btn btn-primary' %>
<% end %>