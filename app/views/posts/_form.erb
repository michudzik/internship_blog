<% if @post.errors.any? %>
  <div class="alert alert-danger">
    <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, class: 'form-control' %>
  <br/>

  <%= f.label :content %>
  <%= f.text_area :content, size: '24x5', class: 'form-control' %>
  <br/>

  <div class="input-group mb-3">
    <div class="input-group-prepend">
      <%= f.label :author_id, class: 'input-group-text' %>
    </div>
    <%= f.select :author_id, @authors, {}, class: 'custom-select' %>
  </div>
  <br/>

  <%= f.submit locals[:button_text], class: 'btn btn-primary' %>
<% end %>