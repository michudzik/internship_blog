<div class="jumbotron text-center">
  <h1>List of posts</h1>
</div>

<div class="container">
  <% @posts.each do |post| %>
    <div class="row singlePost">
      <div class="col-sm-12 col-md-3"><%= post.title %></div>
      <div class="col-sm-12 col-md-3"><%= post.author.full_name %></div>
      <div class="col-sm-12 col-md-2"><%= link_to 'Show', post_path(post.id), role: 'button', class: 'btn btn-primary' %></div>
      <div class="col-sm-12 col-md-2"><%= link_to 'Edit', edit_post_path(post.id), role: 'button', class: 'btn btn-primary' %></div>
      <div class="col-sm-12 col-md-2"><%= link_to 'Delete', post_path(post.id), method: :delete, data: { confirm: 'Are you sure?' }, role: 'button', class: 'btn btn-danger' %></div>
    </div>
  <% end %>
</div>
<hr/>
<div class="container">
  <%= link_to 'New', new_post_path, role: 'button', class: 'btn btn-primary' %>
</div>