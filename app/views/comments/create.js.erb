<% if @comment.post.comments.count == 1 %>
  $('.commentSection').replaceWith('<%= j render 'posts/comment_section', comments: @comment.post.comments %>');
<% else %>
  $('.commentSection-comments').prepend('<%= j render 'posts/comment', comment: @comment %>');
<% end %>
